#!/bin/bash

set -eo pipefail

source "ci/_build_ci_image_common"

build() {
    echo "Building UBI FIPS base image: ${BUILD_IMAGE}"
    docker build \
           --cache-from "${BUILD_IMAGE}" \
           --build-arg UBI_VERSION="${UBI_VERSION}" \
           --build-arg OPENSSL_VERSION="${OPENSSL_VERSION}" \
           -t "${BUILD_IMAGE}" \
           -f "${BUILD_DOCKERFILE}" \
           "${GIT_ROOT}"
}

login
pull
build
push
logout
scan
